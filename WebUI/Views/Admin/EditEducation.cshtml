@model List<Education>

@{
    ViewData["Title"] = "EditEducation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="app-main">
    <!--begin::App Content Header--> <div class="app-content-header">
        <!--begin::Container--> <div class="container-fluid">
            <!--begin::Row--> <div class="row">
                <div class="col-sm-6"> <h3 class="mb-0">Dashboard</h3> </div> <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-end">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Dashboard
                        </li>
                    </ol>
                </div>
            </div> <!--end::Row-->
        </div> <!--end::Container-->
    </div> <!--end::App Content Header--> <!--begin::App Content-->
    <div class="app-content">
        <!--begin::Container-->
        <div class="container-fluid">
<div class="row">
    <form asp-action="EditEducation" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-4 offset-4">
                <input type="hidden" asp-for="@Model[i].Id" />
                <div class="form-group">
                    <label asp-for="@Model[i].SchoolName" class="control-label"></label>
                    <input asp-for="@Model[i].SchoolName" class="form-control" />
                    <span asp-validation-for="@Model[i].SchoolName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].StartDate" class="control-label"></label>
                    <input asp-for="@Model[i].StartDate" class="form-control" />
                    <span asp-validation-for="@Model[i].StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].EndDate" class="control-label"></label>
                    <input asp-for="@Model[i].EndDate" class="form-control" />
                    <span asp-validation-for="@Model[i].EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].Degree" class="control-label"></label>
                    <input asp-for="@Model[i].Degree" class="form-control" />
                    <span asp-validation-for="@Model[i].Degree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].Text" class="control-label"></label>
                    <input asp-for="@Model[i].Text" class="form-control" />
                    <span asp-validation-for="@Model[i].Text" class="text-danger"></span>
                </div>
                <hr />
            </div>
        }

                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-outline-success">Güncelle</button>
                    </div>
    </form>
</div>


            <!--begin::Row-->

        </div> <!--end::Container-->
    </div> <!--end::App Content-->
</main> <!--end::App Main-->
